<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- All the capabilities of the LEDs on this device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following capabilities present:
         LIGHTS_RGB_NOTIFICATION_LED = 1
         LIGHTS_RGB_BATTERY_LED = 2
         LIGHTS_MULTIPLE_NOTIFICATION_LED = 4 (deprecated)
         LIGHTS_PULSATING_LED = 8
         LIGHTS_SEGMENTED_BATTERY_LED = 16
         LIGHTS_ADJUSTABLE_NOTIFICATION_LED_BRIGHTNESS = 32
         LIGHTS_BATTERY_LED = 64
         For example, a device supporting pulsating, RGB notification and
         battery LEDs would set this config to 75. -->
    <integer name="config_deviceLightCapabilities">75</integer>

    <!-- Is the battery LED intrusive? Used to decide if there should be a battery led switch -->
    <bool name="config_intrusiveBatteryLed">true</bool>

    <!-- Hardware 'face' keys present on the device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following keys present:
             1 - Home
             2 - Back
             4 - Menu
             8 - Assistant (search)
            16 - App switch
            32 - Camera
            64 - Volume rocker
         For example, a device with Home, Back and Menu keys would set this
         config to 7. -->
    <integer name="config_deviceHardwareKeys">64</integer>

    <!-- Does the device supports fast charging -->
    <bool name="config_FastChargingLedSupported">true</bool>

    <!-- Proximity check on screen on to prevent accidental wakeups -->
    <bool name="config_proximityCheckOnWake">true</bool>

    <!-- Proximity check on screen on default -->
    <bool name="config_proximityCheckOnWakeEnabledByDefault">false</bool>

    <!-- Proximity check timeout -->
    <integer name="nameconfig_proximityCheckTimeout">250</integer>

</resources>

